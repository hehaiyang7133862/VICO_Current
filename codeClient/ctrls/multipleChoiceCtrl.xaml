<UserControl x:Class="nsVicoClient.ctrls.multipleChoiceCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="100">
    <Canvas>
        <StackPanel Name="sPanel" Orientation="Horizontal">
        </StackPanel>
        <Line Y2="32" Stroke="#FFD4D4D4" StrokeThickness="2" ClipToBounds="True"/>
        <Border Canvas.Left="0" Name="bdSelected" Height="32" Width="100" BorderBrush="#FF1FC39D" BorderThickness="1,1,1,1" Background="#FFEAEAEA"/>
    </Canvas>
</UserControl>
