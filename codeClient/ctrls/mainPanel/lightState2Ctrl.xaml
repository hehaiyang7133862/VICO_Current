                <Canvas>
                    <Border Background="#FFBCBCBC" BorderBrush="#FFD4D4D4" BorderThickness="1,1,1,1" Height="25" Width="25"/>
                </Canvas>
            </TabItem>
            <TabItem  Height="0" Width="0" Padding="0" Margin="0">
                <Canvas>
                    <Border Background="#FF3CE100" BorderBrush="#FFD4D4D4" BorderThickness="1,1,1,1" Height="25" Width="25"/>
                </Canvas>
            </TabItem>
        </TabControl>
        <Label Name="lbNr" FontSize="10" Width="35" HorizontalContentAlignment="Center" Canvas.Left="-5" Canvas.Top="1"/>
    </Canvas>
</UserControl>
