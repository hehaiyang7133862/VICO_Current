<UserControl x:Class="nsVicoClient.ctrls.motorStateCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="40">
    <Canvas Name="cvsMain">
        <TabControl Name="tblState" Canvas.Left="16" Canvas.Top="3" Height="8" Width="8" Padding="0" BorderThickness="0" TabStripPlacement="Right" SelectedIndex="0" Background="Transparent">
            <TabItem  Height="0" Width="0" Padding="0" Margin="0">
                <Canvas>
                    <Ellipse Fill="#FFBCBCBC" Height="8" Width="8" />
                </Canvas>
            </TabItem>
            <TabItem  Height="0" Width="0" Padding="0" Margin="0">
                <Canvas>
                    <Ellipse Fill="#FF00E196" Height="8" Width="8" />
                </Canvas>
            </TabItem>
        </TabControl>
        <Label Name="lbStateBit" Canvas.Left="0" Canvas.Top="10" Width="40" HorizontalContentAlignment="Center" FontFamily="Verdana" Foreground="#FF2693CA" />
    </Canvas>
</UserControl>
