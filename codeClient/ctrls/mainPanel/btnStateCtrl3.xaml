                      UnitVisiable="Visible" ReadOnly="True" 
                      myWidth="70" myHorizontalAlignment="Left" 
                      myFontFamily="Verdana" myFontSize="18" myForeground="#FF444444"/>
        <Line X2="125" Canvas.Left="75" Canvas.Top="25" Stroke="#FFD4D4D4" StrokeThickness="2" ClipToBounds="True" />
