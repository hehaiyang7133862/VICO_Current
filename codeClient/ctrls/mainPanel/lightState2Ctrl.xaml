             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="25">
    <Canvas Name="cvsMain" Height="25" Width="25">
        <TabControl Height="25" Width="25" Name="tbState1" TabStripPlacement="Right" Padding="0" BorderThickness="0" SelectedIndex="0" Background="Transparent">
