<UserControl x:Class="nsVicoClient.ctrls.VicoLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="100">
    <Canvas>
        <Label Height="35" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               Name="lbValue" Background="White" BorderBrush="Transparent" BorderThickness="1"
               Content="0" FontSize="18" FontFamily="CuprumFFU" 
               MouseDown="lbValue_MouseDown" MouseUp="lbValue_MouseUp" MouseLeave="lbValue_MouseLeave"/>
        <Label Name="lbUnit" Content="[null]" Height="35" Width="100" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Visibility="Hidden"
               Canvas.Left="100" FontSize="16" FontFamily="Verdana" />
    </Canvas>
</UserControl>
